<!-- transaction-history.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat History</title>
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-black">
  <nav class="text-white p-4">
    <div class="container mx-auto flex justify-between">
      <h1 class="text-xl font-bold">DIGITALMAXTRD</h1>
      <div class="flex items-center">

        <button class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 focus:outline-none" onclick="logout()">
          Logout
        </button>
      </div>
    </div>
  </nav>
  <div class="container mx-auto py-8">
    <div class="mb-3"><a href="/dashboard"><span class="text-white">Dashboard / </span></a><span
        class="text-yellow-600">Chats</span></div>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
      <!-- Sidebar -->

      <!-- Sidebar (if needed) -->

      <!-- Main Content -->
      <div class="md:col-span-5 p-4 bg-white shadow-md rounded-md">
        <!-- Transaction History Section -->
        <div class="p-4 bg-gray-900 shadow-md rounded-md">
          <h2 class="text-lg text-white mb-4">Chat History</h2>
          <table class="w-full">
            <thead>
              <tr>
                <th class="text-left text-white"></th>
                <th class="text-left text-white">User</th>
                <th class="text-left text-white">message</th>
                <th class="text-left text-white">Date</th>
              </tr>
            </thead>
            <tbody>
              <% chats.forEach(chat=> { %>
                <tr class="mb-3">
                  <td class="text-white ">
                    <a class="text-blue-300" href="/replychats/<%= chat.userId %>">Reply</a>
                  </td>
                  <td class="text-white">
                    <%= chat._id %>
                  </td>
                  <td class="text-white">
                    <%= chat.text %>
                  </td>
                  <td class="text-white">
                    <%= chat.createdAt %>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

  <script>
    function logout() {
      window.location.href = "/logout"; // Redirect to the logout route when clicked
    }
  </script>
</body>

</html>