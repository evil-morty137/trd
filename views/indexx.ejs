  <script>
    const cryptoTable = document.getElementById('cryptoTable');

    function fetchCryptoInfo(symbol) {
      const apiKey = 'YOUR_API_KEY';
      const apiUrl = `https://api.coingecko.com/api/v3/coins/${symbol}`;

      return fetch(apiUrl)
        .then(response => response.json());
    }

    function displayCryptoInfo(info) {
      const row = document.createElement('tr');

      const iconCell = document.createElement('td');
      const icon = document.createElement('img');
      icon.src = info.image.small; // URL to the small-sized icon
      icon.className = 'icon';
      iconCell.appendChild(icon);
      row.appendChild(iconCell);

      const nameCell = document.createElement('td');
      nameCell.textContent = info.name;
      row.appendChild(nameCell);    

      const priceCell = document.createElement('td');
      priceCell.textContent = `$${info.market_data.current_price.usd}`;
      row.appendChild(priceCell);

      const marketCapCell = document.createElement('td');
      marketCapCell.textContent = `$${info.market_data.market_cap.usd}`;
      row.appendChild(marketCapCell);

      const volumeCell = document.createElement('td');
      volumeCell.textContent = `$${info.market_data.total_volume.usd}`;
      row.appendChild(volumeCell);

      cryptoTable.querySelector('tbody').appendChild(row);
    }

    // Fetch and display Bitcoin info
    fetchCryptoInfo('bitcoin')
      .then(info => {
        displayCryptoInfo(info);
      })
      .catch(error => {
        console.error('Error fetching info:', error);
      });

    // Fetch and display Ethereum info
    fetchCryptoInfo('ethereum')
      .then(info => {
        displayCryptoInfo(info);
      })
      .catch(error => {
        console.error('Error fetching info:', error);
      });

